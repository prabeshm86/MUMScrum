@using MUMScrum.Web.Helpers
@model IEnumerable<MUMScrum.Web.Models.SprintSummaryViewModel>

@{ var count = 0;}
@foreach (var sprint in Model)
{
    
    if (count % 4 == 0)
    {
       @:</div><div class="row-fluid">
    }
    count++;

    <div class="spann statbox @Utility.GetRandomColor(count)" onTablet="span6" onDesktop="span3">
        <strong>Developer: </strong>@sprint.Developers<br>
        <strong>Tester: </strong>@sprint.Testers<br>
            <a style="color:white" href="#"></a>@sprint.StartDate.Date.ToString("MM/dd") - @sprint.EndDate.Date.ToString("MM/dd")<br>
            <div class="number"><i class="icon-arrow-up"></i></div>
            <div class="title">@sprint.SprintName</div>

            <div class="footer">

                <a href="~/sprint/details/@sprint.SprintId"> Check Details</a>

            </div>
        </div>
    }


@section Scripts {
    <script type="text/javascript">
        $('#BreadCrumMenu').html('Dashboard')
    </script>
    @Scripts.Render("~/bundles/jqueryval")
}