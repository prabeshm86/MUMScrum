@model MUMScrum.Model.ReleaseBacklog

@{
    ViewBag.Title = "Edit Release - " + Model.ReleaseName;
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row-fluid sortable">
        <div class="box span6">
            <div class="box-header" data-original-title>
                <h2><i class="halflings-icon edit"></i><span class="break"></span>Edit  Release</h2>

            </div>
            <div class="box-content">
                <div class="form-horizontal">
                    @Html.ValidationSummary(true)
                    @Html.HiddenFor(model => model.Id)
                    <div class="control-group">
                        @Html.LabelFor(model => model.ReleaseName, new { @class = "control-label col-md-2" })
                        <div class="controls">
                            @Html.EditorFor(model => model.ReleaseName)
                            @Html.ValidationMessageFor(model => model.ReleaseName)
                        </div>
                    </div>

                    <div class="control-group">
                        @Html.LabelFor(model => model.Description, new { @class = "control-label col-md-2" })
                        <div class="controls">
                            @Html.EditorFor(model => model.Description)
                            @Html.ValidationMessageFor(model => model.Description)
                        </div>
                    </div>

                    <div class="control-group">
                        @Html.LabelFor(model => model.ReleaseDate, new { @class = "control-label col-md-2" })
                        <div class="controls">
                            @Html.EditorFor(model => model.ReleaseDate)

                            @Html.ValidationMessageFor(model => model.ReleaseDate)
                        </div>
                    </div>
                    <div class="control-group">
                        @Html.LabelFor(model => model.ScrumMaster, new { @class = "control-label col-md-2" })
                        <div class="controls">
                            @Html.DropDownList("ScrumMasterId", String.Empty)
                            @Html.ValidationMessageFor(model => model.ScrumMasterId)
                        </div>
                    </div>

                    <div class="control-group">
                        @Html.LabelFor(model => model.ProductBacklogId, new { @class = "control-label col-md-2" })
                        <div class="controls">
                            @Html.Label(Model.ProductBacklog.Name, new { @class = "control-label col-md-2" })
                            @Html.HiddenFor(model => model.ProductBacklogId)
                            @Html.ValidationMessageFor(model => model.ProductBacklogId)
                        </div>
                    </div>

                    <div class="form-actions">
                        <div class="col-md-offset-2 controls">
                            <input type="submit" value="Save" class="btn btn-success" />
                        </div>
                    </div>
                </div>
                
            </div>
        </div>


    </div>

}


@section Scripts {
    <script type="text/javascript">
        $('#BreadCrumMenu').html('Release Backlog')
    </script>
    @Scripts.Render("~/bundles/jqueryval")
}