@model MUMScrum.Model.Sprint

@{
    ViewBag.Title = "Delete Sprint";
}


<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Sprint</h4>
    <div class="row-fluid sortable">
        <div class="box span6">
            <div class="box-header" data-original-title>
                <h2><i class="halflings-icon edit"></i><span class="break"></span>Delete Sprint</h2>
            </div>
            <div class="box-content">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.SprintName)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.SprintName)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Description)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Description)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.StartDate)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.EndDate)
                    </dd>

                </dl>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions">
                        <div class="col-md-offset-2 controls">
                            <input type="submit" value="Delete" class="btn btn-default btn-success" /> 
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
    @section Scripts {
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/jqueryval")
        <script type="text/javascript">
        $('#BreadCrumMenu').html('Sprint')
        </script>
    }