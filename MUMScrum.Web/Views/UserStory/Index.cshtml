@model IEnumerable<MUMScrum.Model.UserStory>

@{
    ViewBag.Title = "Index";
}
<div class="row-fluid sortable">
    <div class="box span12">
        <div class="box-header">
            <h2><i class="halflings-icon user"></i><span class="break"></span>My User Stories</h2>
        </div>
        <div class="box-content">
            <table class="table table-striped table-bordered">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Title)
                    </th>


                    <th>
                        @Html.DisplayNameFor(model => model.ProductBackLog.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ReleaseBackLog.ReleaseName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Sprint.SprintName)
                    </th>
                    <th>
                        Developer
                    </th>
                    <th>
                        Tester
                    </th>

                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <a href="~/UserStory/Edit/@item.Id"> @Html.DisplayFor(modelItem => item.Title)</a>
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.ProductBackLog.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ReleaseBackLog.ReleaseName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Sprint.SprintName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Developer.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Tester.FirstName)
                        </td>


                    </tr>
                }

            </table>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/UserStoryController.js"></script>
<script type="text/javascript">
        $('#BreadCrumMenu').html('User Story')
</script>
    <script type="text/javascript">
        $('#UstoriesMenu').addClass('active')
    </script>
}
