

@model IEnumerable<MUMScrum.Model.Sprint>

@{
    ViewBag.Title = "Sprint";
}



<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="row-fluid sortable">

    <div class="box span12">

        <div class="box-header" data-original-title>
            <h2><i class="halflings-icon edit"></i><span class="break"></span>List of Sprints</h2>
        </div>
        <div class="box-icon">
            <a href="~/Employees/Create" class="btn btn-small btn-primary"><i class="halflings-icon plus"></i>Add Employee</a>
        </div>

        <div class="box-content">



            <table class="table">
                <tr>

                    <th style="background-color:seagreen" align="center" headers="1">
                        @Html.DisplayNameFor(model => model.SprintName)
                    </th>
                    <th style="background-color:seagreen" align="center" headers="1">
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th style="background-color:seagreen" align="center" headers="1">
                        @Html.DisplayNameFor(model => model.StartDate)
                    </th>

                    <th style="background-color:seagreen" align="center" headers="1">
                        @Html.DisplayNameFor(model => model.EndDate)
                    </th>


                    <th style="background-color:seagreen" align="center" headers="1">
                        @Html.DisplayNameFor(model => model.ReleaseBacklog)
                    </th>
                    <th style="background-color:seagreen" align="center" headers="1"></th>
                </tr>

                @foreach (var item in Model)
                {

                    var date1 = item.StartDate;
                    //   var date2 = item.EndDate.ToShortDateString();
                    <tr>

                        <td>
                            @Html.DisplayFor(modelItem => item.SprintName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>

                            @Html.DisplayFor(modelItem => item.StartDate)
                        </td>
                        <td>

                            @Html.DisplayFor(modelItem => item.EndDate)
                        </td>
                        <th>
                            @Html.DisplayFor(modelItem => item.ReleaseBacklog.ReleaseName)
                        </th>
                        <td>


                            <a class="btn btn-success" href="~/Sprint/Details/@item.Id">
                                <i class="halflings-icon white zoom-in"></i>
                            </a>
                            <a class="btn btn-info" href="~/Sprint/Edit/@item.Id">
                                <i class="halflings-icon white edit"></i>
                            </a>
                            <a class="btn btn-danger" href="~/Sprint/Delete/@item.Id">
                                <i class="halflings-icon white trash"></i>
                            </a>
                        </td>

                    </tr>
                }

            </table>

            @section Scripts {
                @Scripts.Render("~/bundles/jquery")
                @Scripts.Render("~/bundles/jqueryval")
                <script type="text/javascript">
                    $('#BreadCrumMenu').html('Sprint')
                </script>
            }
